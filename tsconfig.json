{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "types": ["node"],
    "lib": ["ES2021.String"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "./test", "./dist", "./prisma"],
}
